<%- include('partials/header', {btns: 'logout'}) %>
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="col-md-5">
        <div class="mb-3 text-center">
          <h1 class="display-3 mb-0">Submit a Secret</h1>
          <p class="lead fs-4 mb-3">No one needs to know it was you!</p>
          <a href="/secrets">Return</a> 
        </div>
          <hr/>
        <form id="secret-form" class="mt-4 justify-content-center align-items-center row" action="/submit" method="POST">
          <div class="col-md-7 align-items-center">
            <input
              type="text"
              class="form-control text-center"
              name="secret"
              placeholder="What's your secret?"
            />
          </div>
          <div class="col-auto align-items-center">
            <button class="btn btn-dark" type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<%- include('partials/footer') %>