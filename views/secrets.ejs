<%- include('partials/header') %>

<div class="container full-height">
  <div class="row justify-content-between">
    <div class="col-md-4 pt-3">
      <% if(loggedIn){ %>
      <a class="btn btn-dark btn-lg" href="/submit" role="button"
        >Submit a Secret</a
      >
      <% } %>
    </div>

    <div class="col-md-3 pt-3">
      <% if(loggedIn){ %>
      <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
      <%} else {%>
      <a class="btn btn-light btn-lg" href="/register" role="button"
        >Register</a
      >
      <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
      <% } %>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-7 pt-4">
        <div class="text-center mb-4">
          <i class="fas fa-key fa-6x"></i>
          <h1 class="display-4">You've Discovered My Secret!</h1>
          <hr />
          <% usersWithSecrets.forEach(element =>{ %>
          <p class="secret-text"><%= element.secret %></p>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</div>
